# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
VITE_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_firebase_measurement_id

# PlayHT API Credentials
VITE_PLAYHT_SECRET_KEY=your_playht_secret_key
VITE_PLAYHT_USER_ID=your_playht_user_id

# OpenRouter API
VITE_OPENROUTER_API_KEY=your_openrouter_api_key

# Feature Flags
VITE_ENABLE_VOICE_CLONING=true
VITE_ENABLE_CUSTOM_VOICES=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PUSH_NOTIFICATIONS=true

# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
VITE_STRIPE_PRICE_ID_PRO_MONTHLY=your_stripe_price_id_pro_monthly
VITE_STRIPE_PRICE_ID_PRO_YEARLY=your_stripe_price_id_pro_yearly
VITE_STRIPE_PRICE_ID_PREMIUM_MONTHLY=your_stripe_price_id_premium_monthly
VITE_STRIPE_PRICE_ID_PREMIUM_YEARLY=your_stripe_price_id_premium_yearly

# MongoDB Configuration
VITE_MONGODB_URI=your_mongodb_uri

# Server Configuration
PORT=3001

# Environment
NODE_ENV=production

# CORS Configuration
ALLOWED_ORIGIN=https://audiomax-jo3yc.ondigitalocean.app,https://audiomax.ai

